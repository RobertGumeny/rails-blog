    <div class="card p-2 my-2">
    <h3>Add a Comment</h3>
    <%= form_for([@post, @post.comments.build]) do |f| %>
      <p>
        <%= f.label :username %><br>
        <%= f.text_field(:username, { :class => 'form control'}) %>
      </p>
      <p>
        <%= f.label :body %><br>
        <%= f.text_field(:body, { :class => 'form control'}) %>
      </p>
      <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
      </p>
    <% end %>
    </div>